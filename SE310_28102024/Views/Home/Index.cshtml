@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}
@using SE310_WebAPI.Models;
@model X.PagedList.IPagedList<HangHoa>
@foreach(var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 mix vegetables fastfood">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg="@Url.Content("../Images/Images/" + item.Img)" style="background-image: url(&quot;../LayoutOgani/img/featured/feature-2.jpg&quot;);">
                <ul class="featured__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a asp-controller="Home" asp-action="ChiTietSanPham" asp-route-maSp="@item.HangHoaId">@item.TenHang</a></h6>
                <h5>@item.Gia</h5>
            </div>
        </div>
    </div>  
}

